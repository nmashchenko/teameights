{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": ["dev-nextjs"],
  "automerge": true,
  "automergeType": "pr",
  "prConcurrentLimit": 10,
  "major": {
    "automerge": false
  },
  "labels": ["dependencies", "renovate"],
  "schedule": ["every weekday"],
  "prHourlyLimit": 10,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "includePaths": ["client/**"],
  "stabilityDays": 6,
  "excludePaths": ["server/**"]
}
