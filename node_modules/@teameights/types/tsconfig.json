{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": false,
    "rootDir": "."
  },
  "include": ["src/**/*", "scripts/*"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
